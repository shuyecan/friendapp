<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="15dp"
            android:text="去桂林旅游"
            android:textColor="@color/title_black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/locat_img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/text_content"
            android:layout_alignStart="@+id/text_content"
            android:layout_marginBottom="10dp"
            android:src="@drawable/location" />

        <TextView
            android:id="@+id/text_address"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignTop="@+id/locat_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/locat_img"
            android:text="广州"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignTop="@+id/locat_img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="2019-04-22 8:10"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="21dp"
            android:text="删除"
            android:textColor="@color/red" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
