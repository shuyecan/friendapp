<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Addnotactivity">


    <include layout="@layout/mtooler">

    </include>



    <View
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="0.1dp"
    android:background="@color/titleblack"
    />
    <LinearLayout
        android:id="@+id/lin_start_time"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:text="开始时间"
            android:layout_width="100dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/text_start_time"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="50dp" />

        <ImageView
            android:src="@drawable/jiantou"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/titleblack"
        />


    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/titleblack"
        />
    <LinearLayout
        android:id="@+id/lin_end_time"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:text="结束时间"
            android:layout_marginLeft="15dp"
            android:layout_width="100dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/text_end_time"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="50dp" />

        <ImageView
            android:src="@drawable/jiantou"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/titleblack"
        />


    <EditText
        android:id="@+id/edt_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"
        android:hint="请输入作息内容"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="5dp"
        android:minLines="5"
        android:gravity="top"
        android:background="@drawable/order_edt_note_bg"
        android:textColor="@android:color/black"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:text="保存"
        android:layout_gravity="center"
        android:layout_marginHorizontal="15dp"
        android:textColor="#ffffff"
        android:textSize="12sp"
        >

    </Button>
</LinearLayout>